<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
    <gradient
      android:startColor="#FFE680"
      android:endColor="#FFCC00"
      android:angle="270" />
    <stroke
      android:width="1dp"
      android:color="#71c2eb" />
    <corners
      android:radius="3dp" />
    <padding
     android:left="10dp"
      android:top="10dp"
     android:right="10dp"
     android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
    <gradient
      android:startColor="#FFE680"
      android:endColor="#FFCC00"
      android:angle="270" />
    <stroke
      android:width="1dp"
      android:color="#71c2eb" />
    <corners
      android:radius="4dp" />
    <padding
      android:left="10dp"
      android:top="10dp"
      android:right="10dp"
      android:bottom="10dp" />
    </shape>
  </item>
</selector>
